{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">Portfolio de {{ user.firstname }} {{ user.lastname }}</h1>

    <div class="container" style="display: flex; justify-content: space-between; flex-wrap: wrap; align-items: center">
        {% for project in projects %}
            <div class="card bg-dark text-white my-5" style="width: 30rem">
                <a href="http://{{ project.url }}" style="text-decoration: none; color: white; font-weight: bold; text-shadow: 1px 1px 1px black">
                    <img src="{{ project.photoProject }}" class="card-img" alt="{{ project.name }}">
                    <div class="card-img-overlay" style="vertical-align: bottom">
                        <h3 class="card-title text-center">{{ project.name }}</h3>
                        <p class="card-text text-center" style="position: absolute; bottom: 0" >{{ project.description }}</p>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('portfolio_index') }}">back to list</a>

    <a href="{{ path('portfolio_edit', {'slug': user.slug}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
