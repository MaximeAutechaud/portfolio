{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">Tous les projets</h1>

    <div class="container" style="display: flex; justify-content: space-between; flex-wrap: wrap; align-items: center">
        {% for project in projects %}
            <div class="my-5">
                <h2 class="text-center">{{ project.user.firstname }} {{ project.user.lastname }}</h2>
                <div class="card bg-dark text-white" style="width: 30rem">
                    <a href="{{ path('project_show', {'id': project.id}) }}" style="text-decoration: none; color: white; font-weight: bold; text-shadow: 1px 1px 1px black">
                        <img src="{{ project.photoProject }}" class="card-img" alt="{{ project.name }}">
                        <div class="card-img-overlay" style="vertical-align: bottom">
                            <h3 class="card-title text-center">{{ project.name }}</h3>
                            <p class="card-text text-center" style="position: absolute; bottom: 0">{{ project.description }}</p>
                        </div>
                    </a>
                </div>
            </div>

        {% endfor %}
    </div>
